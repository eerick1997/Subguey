<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erick.adooproject.Login">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IMG_login"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:adjustViewBounds="true"
            android:paddingTop="5dp"
            android:src="@drawable/logo_Subguey" />

        <TextView
            android:id="@+id/info_login"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:text="@string/log_in_message"
            android:textColor=""
            android:textColorHighlight=""
            android:textSize="17dp" />

        <Button
            android:id="@+id/g_sign_in_button"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@string/L2"
            android:foregroundGravity="center"
            android:text="ACCEDER"
            android:textColor="@string/layout_acceder" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
